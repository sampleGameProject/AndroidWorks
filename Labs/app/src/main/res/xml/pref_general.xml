<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="database_dir_path"
        android:title="@string/pref_title_database_dir_path"
        android:defaultValue="@string/pref_default_database_dir_path"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="database_export_file_path"
        android:title="@string/pref_title_database_export_file_path"
        android:defaultValue="@string/pref_default_database_export_file_path"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="database_import_file_path"
        android:title="@string/pref_title_database_import_file_path"
        android:defaultValue="@string/pref_default_database_import_file_path"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="database_name"
        android:title="@string/pref_title_database_name"
        android:defaultValue="@string/pref_default_database_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="data_work_types_list"
        android:title="@string/pref_title_data_source_type"
        android:defaultValue="0"
        android:entries="@array/pref_data_work_source_type"
        android:entryValues="@array/pref_data_work_source_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
