<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_shared_preferences"
        android:id="@+id/buttonShowPreferences"
        android:layout_below="@+id/lastName"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/json_show_title"
        android:id="@+id/buttonOpenJSON"
        android:layout_below="@+id/buttonShowPreferences"
        android:layout_toRightOf="@+id/lastName"
        android:layout_toEndOf="@+id/lastName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_csv_title"
        android:id="@+id/buttonOpenCSV"
        android:layout_below="@+id/buttonOpenJSON"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
